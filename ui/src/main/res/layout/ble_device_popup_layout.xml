<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_btsel"
    >

    <LinearLayout
        android:id="@+id/layout_associated_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/associated_devices" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_connected_devices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false" />

        <ImageView
            android:layout_marginTop="5dp"
            android:src="@color/gray_btn_bg_color"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_available_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_associated_devices"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:text="@string/available_devices" />

    <LinearLayout
        android:id="@+id/layout_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_available_devices"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/layout_devices"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false">
        <ImageView

            android:layout_centerVertical="true"
            android:id="@+id/iv_searching"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/loading" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_searching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_searching"
            android:text="@string/searching_for_devices" />

    </RelativeLayout>
</RelativeLayout>