<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hint_bg">

    <RelativeLayout
        android:id="@+id/ly_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="0dp">

        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ico_alert" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="@string/self_diagnosis"
            android:textColor="#000000"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/view_close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/btn_close_" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_top"
        android:layout_marginLeft="14dp"
        android:text="@string/reminder" />

    <TextView
        android:id="@+id/tv_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_top"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="30dp"
        android:text="...."
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_possible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_reminder"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="30dp"
        android:text="@string/possible_problems_and_how_to_fix"
        android:textColor="#000000" />
    <TextView
        android:textColor="#000000"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:layout_above="@+id/bt_go_next"
        android:layout_below="@+id/tv_possible"
        android:id="@+id/tv_how_fix"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ListView
        android:visibility="gone"
        android:scrollbars="none"
        android:id="@+id/list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_go_next"
        android:layout_below="@+id/tv_possible"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp">

    </ListView>

    <Button
        android:id="@+id/bt_go_next"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/app_bt_bg"
        android:text="@string/known"
        android:textColor="#ffff" />
</RelativeLayout>