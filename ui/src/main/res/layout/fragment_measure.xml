    <ImageView
        android:id="@+id/iv_layout_measure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layout_measure"
        android:layout_alignTop="@+id/layout_measure"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layout_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp">

            <!-- Left: menu -->
            <RelativeLayout
                android:id="@+id/iv_menu"
                android:layout_width="64dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/ico_menu" />
            </RelativeLayout>

            <!-- Center: title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="@string/measure"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <!-- Right: Bluetooth icon -->
            <ImageView
                android:id="@+id/bt_blue_connect"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/bt_linked" />

            <!-- Temperature status BETWEEN title and Bluetooth -->
            <LinearLayout
                android:id="@+id/layout_temp_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_toLeftOf="@id/bt_blue_connect"
                android:layout_marginRight="8dp"

                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="4dp"
                android:paddingEnd="0dp">

                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25.0"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_danwei2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/temp_degree_c"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>

