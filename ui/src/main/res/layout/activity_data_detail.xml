<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:orientation="vertical">
    <View
        android:visibility="gone"
        android:id="@+id/fillStatusBarView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/colorPrimary" />

    <RelativeLayout
        android:layout_below="@+id/fillStatusBarView"
        android:id="@+id/ly_title"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/tv_left"
            android:layout_marginTop="12dp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@drawable/statusbar_back"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/data"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:text="@string/select"
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
           />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/ly_title"
        android:id="@+id/ly_note"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:id="@+id/tv_date"
            android:text="01/10/18 3:25PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_note"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="@string/note"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bt_bg"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <ImageView
        android:layout_below="@+id/ly_note"
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp" />

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:background="#f6f6f6">

        <LinearLayout
            android:id="@+id/ly_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <ImageButton
            android:scaleType="fitXY"
            android:id="@+id/bt_send"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@null"
            android:src="@drawable/btn_send" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:text="@string/send" />
        </LinearLayout>

        <LinearLayout
        android:id="@+id/ly_Asset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignLeft="@+id/ly_send"
        android:layout_alignRight="@+id/ly_category"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:scaleType="fitXY"
            android:id="@+id/bt_Asset"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@null"
            android:src="@mipmap/asset_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:text="@string/Assect_data" />

        </LinearLayout>

        <LinearLayout
        android:id="@+id/ly_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:scaleType="fitXY"
            android:id="@+id/bt_category"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@null"
            android:src="@drawable/btn_category" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-5dp"
            android:text="@string/category"   />
        </LinearLayout>

        <LinearLayout
        android:id="@+id/ly_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:layout_marginRight="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:scaleType="fitXY"
            android:id="@+id/bt_del"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@null"
            android:src="@drawable/btn_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-5dp"
            android:text="@string/delete" />
        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:id="@+id/assect_images"
        android:src="@drawable/assect_pool"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/layout_bottom"
        android:layout_marginTop="-60dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/ass_tixi"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/layout_bottom"
        android:layout_marginTop="-45dp"
        android:layout_alignRight="@+id/assect_images"
        android:layout_marginRight="60dp"
        android:text="@string/Assect_Links"
        android:gravity="right"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/ass_name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/layout_bottom"
        android:layout_marginTop="-45dp"
        android:layout_alignLeft="@+id/assect_images"
        android:layout_marginLeft="60dp"
        android:gravity="left"
        android:textColor="@color/colorPrimary"
        android:text="cjhdksahdkjashd"/>

    <RelativeLayout
        android:id="@+id/Recycler_id"
        android:layout_width="match_parent"
        android:layout_marginTop="300dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_cancel"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/Assect_Cancle"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:gravity="center"/>

        <TextView
            android:id="@+id/id_ok"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/Assect_Confirm"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:gravity="center" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Recycler_View"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

    </RelativeLayout>
</RelativeLayout>