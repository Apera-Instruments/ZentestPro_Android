<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:visibility="gone"
        android:id="@+id/fillStatusBarView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/colorPrimary" />

    <RelativeLayout
        android:layout_below="@+id/fillStatusBarView"
        android:id="@+id/ly_title"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp">
        <ImageView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:id="@+id/iv_menu"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/ico_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_left"
            android:layout_marginTop="12dp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@drawable/statusbar_back"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/note"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/bt_blue_connect"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/bt_linked" />
        <TextView
            android:visibility="invisible"
            android:gravity="center"
            android:text="@string/save"
            android:id="@+id/tv_right"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ly_location"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/ly_locationText"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ico_setting_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_alignParentBottom="true"
            android:src="@color/bg_line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:text="@string/Assect_data"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <Button
            android:id="@+id/et_name"
            android:singleLine="true"
            android:layout_below="@+id/tv_name"
            android:background="@null"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:hint="@string/Assect_Link"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/et_name"
            android:src="@color/bg_line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_admin"
            android:text="@string/admin"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <EditText
            android:id="@+id/et_admin"
            android:layout_below="@+id/tv_admin"
            android:background="@null"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <ImageView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/et_admin"
            android:src="@color/bg_line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_notes"
            android:text="@string/notes"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <EditText
            android:id="@+id/et_notes"
            android:layout_below="@+id/tv_notes"
            android:background="@null"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
        <ImageView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/et_notes"
            android:src="@color/bg_line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_photo"
            android:text="@string/photo"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <ScrollView
            android:layout_below="@+id/tv_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_photo1"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_photo"
                android:src="@color/float_transparent"
                android:scaleType="fitXY"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
        <ImageView
            android:id="@+id/iv_photo"
            android:layout_marginTop="10dp"
            android:src="@mipmap/btn_addpic"
            android:layout_below="@+id/tv_photo"
            android:background="@null"
            android:layout_marginLeft="16dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Recycler_id"
        android:layout_width="match_parent"
        android:layout_marginTop="-200dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_cancel"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/Assect_Cancle"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:gravity="center"/>

        <TextView
            android:id="@+id/id_ok"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/Assect_Confirm"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:gravity="center" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Recycler_View"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

    </RelativeLayout>

</LinearLayout>